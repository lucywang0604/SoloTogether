
<!-- Wrapper div for entire page with overflow handling -->
<div class="h-screen flex flex-col overflow-hidden">
  <!-- Header with profile info -->
  <div class="p-4 bg-white shadow-sm">
    <div class="flex items-center gap-4">
      <% if current_user&.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: "h-16 w-16 rounded-full object-cover" %>
      <% else %>
        <div class="h-16 w-16 rounded-full bg-purple-200 flex items-center justify-center">
          <span class="text-purple-700 text-xl"><%= current_user&.email&.first&.upcase %></span>
        </div>
      <% end %>
      <div>
        <h1 class="text-xl font-semibold text-gray-900">Profile name</h1>
        <p class="text-sm text-gray-500">Character</p>
      </div>
    </div>
  </div>

  <!-- Scrollable content area with padding bottom for nav bar -->
  <div class="flex-1 overflow-y-auto bg-gray-50 pb-24"> <!-- Added pb-24 for bottom nav spacing -->
    <div class="p-4">
      <!-- City section -->
      <section class="mb-8">
        <h2 class="text-lg font-medium text-gray-700 mb-3">CITY</h2>
        <div class="grid grid-cols-3 gap-4">
          <div class="bg-white rounded-lg shadow-sm h-24"></div>
          <div class="bg-white rounded-lg shadow-sm h-24"></div>
          <div class="bg-white rounded-lg shadow-sm h-24"></div>
        </div>
      </section>

      <!-- Current location section with map -->
      <section class="mb-8">
        <h2 class="text-lg font-medium text-gray-700 mb-3">Current location</h2>
        <div class="bg-white rounded-lg shadow-sm p-4">
          <div id="map" class="w-full aspect-square rounded-lg"></div>
        </div>
      </section>

      <!-- Activities section -->
      <section class="mb-8">
        <%= link_to bookings_path do %>
          <h2 class="text-lg font-medium text-gray-700 mb-3">BOOKINGS</h2>
          <div class="grid grid-cols-3 gap-4">
            <div class="bg-white rounded-lg shadow-sm h-24"></div>
            <div class="bg-white rounded-lg shadow-sm h-24"></div>
            <div class="bg-white rounded-lg shadow-sm h-24"></div>
          </div>
        <% end %>
      </section>
    </div>
  </div>

  <!-- Bottom navigation -->
  <%= render "shared/bottom_nav" %>
</div>

<!-- Map initialization script -->
<script>
  function initMap() {
    // Default coordinates (you may want to replace these with the user's actual location)
    const defaultLocation = { lat: -34.397, lng: 150.644 };

    const map = new google.maps.Map(document.getElementById("map"), {
      center: defaultLocation,
      zoom: 14,
      styles: [
        {
          featureType: "all",
          elementType: "geometry",
          stylers: [{ color: "#f5f5f5" }]
        },
        {
          featureType: "water",
          elementType: "geometry",
          stylers: [{ color: "#e9e9e9" }]
        },
        {
          featureType: "water",
          elementType: "labels.text.fill",
          stylers: [{ color: "#9e9e9e" }]
        }
      ]
    });

    // Add a marker for the user's location
    new google.maps.Marker({
      position: defaultLocation,
      map: map,
      icon: {
        path: google.maps.SymbolPath.CIRCLE,
        scale: 10,
        fillColor: "#FF0000",
        fillOpacity: 0.3
      }
    });
  }
</script>
